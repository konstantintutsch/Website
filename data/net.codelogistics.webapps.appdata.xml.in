<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
  <id>net.codelogistics.webapps</id>

  <name>Web Apps</name>
  <summary>Install websites as apps</summary>

  <developer id="net.codelogistics">
    <name translate="no">Satvik Patwardhan</name>
  </developer>

  <branding>
    <color type="primary" scheme_preference="light">#66dd93</color>
    <color type="primary" scheme_preference="dark">#1aac69</color>
  </branding>

  <metadata_license>FSFAP</metadata_license>
  <project_license>GPL-3.0-or-later</project_license>

  <description>
    <p>
      Install websites as desktop apps, so that they appear in their own windows separate from any browsers installed.
      This is similar to the &quot;Install as App&quot; feature found in popular web browsers.
    </p>
    <p>
      It uses an internal browser isolated from the system browser, which can optionally be used in incognito mode.
      Links to websites other than the one installed open in a new browser window.
    </p>
  </description>

  <content_rating type="oars-1.0" />
  <url type="homepage">https://codeberg.org/eyekay/webapps</url>
  <url type="vcs-browser">https://codeberg.org/eyekay/webapps</url>
  <url type="bugtracker">https://codeberg.org/eyekay/webapps/issues</url>

  <launchable type="desktop-id">net.codelogistics.webapps.desktop</launchable>
  <screenshots>
    <screenshot type="default">
      <image>https://codelogistics.net/webapps4.png</image>
    </screenshot>
    <screenshot>
      <image>https://codelogistics.net/webapps5.png</image>
    </screenshot>
    <screenshot>
      <image>https://codelogistics.net/webapps6.png</image>
    </screenshot>
  </screenshots>

  <releases>
    <release version="0.5.2" date="2024-07-09">
      <description translate="no">
        <ul>
          <li>Desktop files are no longer visible if app in uninstalled.</li>
          <li>Keyboard shortcus for back and forward.</li>
        </ul>
      </description>
    </release>
    <release version="0.5.1" date="2024-06-29">
      <description translate="no">
        <ul>
          <li>Favicons are now loaded asynchronously with the libsoup library.</li>
          <li>The app can now use other fallbacks if the favicon specifed by the page is in an unsupported format.</li>
          <li>Minor UI fixes.</li>
        </ul>
      </description>
    </release>
    <release version="0.5.0" date="2024-06-28">
      <description translate="no">
        <ul>
          <li>The "Create Web App" and "Edit Web App" dialogs have been revamped with a fresh UI and better support for fetching favicons.</li>
          <li>Custom user agents can now be specified for web apps.</li>
          <li>App names can now be in any language, include any special characters and be of any length.</li>
          <li>Separate permission is no longer required to install a web app after clicking the Install button.</li>
          <li>Improved support for desktop environments other than GNOME.</li>
          <li>Improvements to PWA manifest support.</li>
          <li>Minor UI improvements in the rest of the app.</li>
          <li>Added Italian translations (thanks to Albano Battistella)</li>
        </ul>
      </description>
    </release>
    <release version="0.4.8" date="2024-06-21">
      <description translate="no">
        <p>Fixed websites with no PWA icons under 512x512. Added Hindi, Russian and Ukrainian translations.</p>
      </description>
    </release>
    <release version="0.4.7" date="2024-06-18">
      <description translate="no">
        <p>Updated app metadata and screenshots. All windows can now be closed with Ctrl+W.</p>
      </description>
    </release>
    <release version="0.4.6" date="2024-06-14">
      <description translate="no">
        <p>Added an "Add manually" option to the Add Web App dialog for users facing issues with the PWA lookup.</p>
      </description>
    </release>
    <release version="0.4.5" date="2024-06-07">
      <description translate="no">
        <p>Added a 'Report Broken Website' button. Fixed some websites not being installed if their manifest used relative URLs.</p>
      </description>
    </release>
    <release version="0.4.4" date="2024-06-03">
      <description translate="no">
        <p>Fixed some webpages not being opened due to trailing '/'. Fixed popup links not being opened.</p>
      </description>
    </release>
    <release version="0.4.3" date="2024-05-25">
      <description translate="no">
        <p>Added preliminary support for PWA manifests (name, icon). Window size of web apps is now retained after closing the app. A few domains for logging in to sites and filling CAPCTHAs are now allowed by default.</p>
      </description>
    </release>
    <release version="0.4.2" date="2024-05-21">
      <description translate="no">
        <p>Updated the application icon. Added support for notifications, geolocation and other permissions. Added support for blob downloads.</p>
      </description>
    </release>
    <release version="0.4.1" date="2024-05-18">
      <description translate="no">
        <p>Fixed a bug where the installed web app's names could not contain numbers.</p>
      </description>
    </release>
    <release version="0.4.0" date="2024-05-13">
      <description translate="no">
        <p>Ported the application to Adw. The program now handles downloads. Various bugs fixed.</p>
      </description>
    </release>
    <release version="0.3.0" date="2024-02-20">
      <description translate="no">
        <p>Parts of the program have been rewritten to use XDG desktop portals.</p>
      </description>
    </release>
  </releases>
</component>
